{
    "manifest_version": 3,
    "name": "Sawalo Testing Environment",
    "description" : "Testing environment for subject validation.",
    "version": "1.0",
    "content_scripts":
    [
        {
            "matches": ["<all_urls>"],
            "js": ["test.js"]
        }
    ],
    "icons":
    {
        "192": "192x192.png"
    },
    "action": 
    {
        "default_icon": "192x192.png",
        "default_popup" : "popup.html"
    },
    "permissions":
    [
        "tabs",
        "activeTab",
        "pageCapture",
        "downloads",
        "<all_urls>"
    ]
}